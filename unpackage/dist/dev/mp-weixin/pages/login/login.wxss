.logo {
  width: 70%;
  margin-left: auto;
  margin-right: auto;
  display: block;
  margin-top: 30%;
}
.logo-title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 8%;
  color: #333;
}
.logo-subtitle {
  font-size: 34rpx;
  text-align: center;
  color: #333;
  margin-top: 20rpx;
}
.login-btn {
  width: 60%;
  position: absolute;
  bottom: 20%;
  left: 20%;
  background-color: #3474FF;
  color: #ffffff;
  box-sizing: border-box;
}
.login-btn:active {
  background-color: #0052FF;
}
.register-container {
  position: absolute;
  bottom: 5rpx;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}
.register-container .register {
  color: #3474FF;
}

