.logo {
  width: 70%;
  display: block;
  margin-left: auto;
  margin-right: auto;
  margin-top: 80rpx;
}
.register-container {
  width: 70%;
  margin-top: 150rpx;
  margin-left: auto;
  margin-right: auto;
}
.register-container .register-code {
  border: solid 1rpx #E0E0E0;
  font-size: 34rpx;
  color: #333;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  height: 80rpx;
  padding: 0 20rpx;
}
.register-container .register-desc {
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 80rpx;
}
.register-container .register-btn {
  background-color: #3474FF;
  color: #ffffff;
}
.register-container .register-btn:active {
  background-color: #0052FF;
}

